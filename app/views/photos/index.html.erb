<h2 class="name"><%= @album.album_name %></h2>
<div class="age">
  <i class="fas fa-birthday-cake"> <%= @age %>歳<%= @month.floor %>ヶ月</i>
</div>
<div class="add-photo">
  <% if @album_author == current_user %>
    <%= link_to new_album_photo_path do %>
      <i class="fas fa-plus"> 写真追加</i>
    <% end %>
  <% end %>
</div>
<div class="photos">
  <% @photos.each do |photo| %>
    <div>
      <%= link_to album_photo_path(@album.id,photo) do %>
        <%= attachment_image_tag photo, :image, :fill, 150, 150, format: 'jpeg' %>
      <% end %>
    </div>
  <% end %>
</div>